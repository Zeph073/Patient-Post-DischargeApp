<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".doctor.AddNewPatient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Add new patient"
        android:layout_marginTop="25dp"
        android:id="@+id/addNew"/>

    <ProgressBar
        android:layout_below="@id/addNew"
        android:id="@+id/progressBar3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="0"
        android:max="100"
        android:indeterminate="true"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:hint="Patient name"
        android:layout_below="@id/progressBar3"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black"
        android:inputType="text" />
        <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:hint="Patient email"
        android:layout_below="@id/editText1"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:hint="Patient age"
        android:layout_below="@id/editText7"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black"
        android:inputType="text" />

<!--    <EditText-->
<!--        android:id="@+id/editText8"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="45dp"-->
<!--        android:layout_marginHorizontal="10dp"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:hint="Password"-->
<!--        android:layout_below="@id/editText7"-->
<!--        android:background="@drawable/edit_text"-->
<!--        android:textColorHint="@color/primary"-->
<!--        android:textColor="@color/black"-->
<!--        android:inputType="textPassword" />-->

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:hint="Patient residence"
            android:layout_below="@id/editText2"
            android:background="@drawable/edit_text"
            android:textColorHint="@color/primary"
            android:textColor="@color/black"
            android:inputType="text" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:hint="Patient phone"
        android:layout_below="@id/editText3"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:hint="Test conducted"
        android:layout_below="@id/editText4"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black"
        android:inputType="text" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:hint="Diagnosis"
        android:ems="10"
        android:lineSpacingMultiplier="1.4"
        android:gravity="top"
        android:autofillHints=""
        android:inputType="textMultiLine"
        android:layout_below="@id/editText6"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/primary"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/black"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"/>

    </RelativeLayout>

</ScrollView>